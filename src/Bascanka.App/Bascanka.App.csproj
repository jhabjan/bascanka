<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net10.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <NoWarn>WFO1000</NoWarn>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <ApplicationIcon>Resources\bascanka.ico</ApplicationIcon>
    <AssemblyName>Bascanka</AssemblyName>
    <RootNamespace>Bascanka.App</RootNamespace>
    <Copyright>Â© 2026 Josip Habjan. All rights reserved.</Copyright>
    <Version>1.0.5</Version>
  </PropertyGroup>
  <ItemGroup>
    <None Remove="Resources\AppxManifest.xml.template" />
    <None Remove="Resources\Bascanka.Explorer.ContextMenu.dll" />
    <None Remove="Resources\bascanka.ico" />
    <None Remove="Resources\bascanka_logo.png" />
    <None Remove="Resources\bascanska_ploca.jpg" />
    <None Remove="Resources\contributors.txt" />
    <None Remove="Resources\lang_en.json" />
    <None Remove="Resources\lang_hr.json" />
    <None Remove="Resources\lang_sr.json" />
    <None Remove="Resources\lang_zh.json" />
    <None Remove="Resources\release_notes.txt" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="..\..\contributors.txt" Link="Resources\contributors.txt" />
    <EmbeddedResource Include="..\..\release_notes.txt" Link="Resources\release_notes.txt" />
    <EmbeddedResource Include="Resources\AppxManifest.xml.template" />
    <EmbeddedResource Include="Resources\Bascanka.Explorer.ContextMenu.dll" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Resources\bascanka.ico" />
    <EmbeddedResource Include="Resources\bascanka_logo.png" />
    <EmbeddedResource Include="Resources\bascanska_ploca.jpg" />
    <EmbeddedResource Include="Resources\lang_en.json" />
    <EmbeddedResource Include="Resources\lang_hr.json" />
    <EmbeddedResource Include="Resources\lang_sr.json" />
    <EmbeddedResource Include="Resources\lang_zh.json" />
    <EmbeddedResource Include="Resources\lang_ru.json" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Bascanka.Core\Bascanka.Core.csproj" />
    <ProjectReference Include="..\Bascanka.Editor\Bascanka.Editor.csproj" />
    <ProjectReference Include="..\Bascanka.Plugins.Api\Bascanka.Plugins.Api.csproj" />
  </ItemGroup>
</Project>
